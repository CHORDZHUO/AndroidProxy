<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cn.wsgwz.gravity.fragment.ConfigFragment">

    <ScrollView
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/other_ll_00"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:background="@drawable/fragment_config_et_background_selector"
                android:layout_width="match_parent"
                android:layout_height="400dp">

                <TextView
                    android:id="@+id/hint_TV"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="2dp"
                    android:gravity="center"
                    android:hint="文件名"
                    android:background="#22ffffff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <EditText
                    android:id="@+id/edit_ET"
                    android:layout_below="@+id/hint_TV"

                    android:background="@null"
                    android:minLines="4"
                    android:gravity="top"
                    android:textSize="14sp"
                    android:padding="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

            <LinearLayout
                android:layout_below="@+id/other_ll_00"
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="45dp">


                <Button
                    android:id="@+id/select_Bn"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:text="选择"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />
                <View
                    android:layout_width="30dp"
                    android:layout_height="match_parent"></View>
                <Button
                    android:id="@+id/new_Bn"
                    android:text="新建"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />
                <View
                    android:layout_width="30dp"
                    android:layout_height="match_parent"></View>
                <Button
                    android:id="@+id/delate_Bn"
                    android:text="删除"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />
                <View
                    android:layout_width="30dp"
                    android:layout_height="match_parent"></View>
                <Button
                    android:id="@+id/save_Bn"
                    android:text="保存"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />
            </LinearLayout>
        </RelativeLayout>


    </ScrollView>
</FrameLayout>
