<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:background="@mipmap/bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cn.wsgwz.gravity.MainActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_height="?attr/actionBarSize"
        android:layout_width="match_parent"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Dialog.Alert">
    </android.support.v7.widget.Toolbar>
    <RelativeLayout
        android:id="@+id/main_RL"
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <cn.wsgwz.gravity.view.slidingTabLayout.SlidingTabLayout
            android:id="@+id/slidingTabLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></cn.wsgwz.gravity.view.slidingTabLayout.SlidingTabLayout>
        <cn.wsgwz.gravity.view.slidingTabLayout.ViewPager
            android:id="@+id/my_viewPager"
            android:layout_below="@+id/slidingTabLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></cn.wsgwz.gravity.view.slidingTabLayout.ViewPager>
    </RelativeLayout>
</RelativeLayout>
